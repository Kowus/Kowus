	<form style="padding-left: 30px; background: rgba(1, 1, 1, 0.2) fixed; padding-top: 10px; " class="form_edit" name="cform">
		<div class="form-group">
			<input type="name" ng-model="name" class="form-control" id="exampleInputName" placeholder="Name" required>
		</div>

		<div class="form-group">
			<input type="email" ng-model="email" class="form-control" id="mail" placeholder="Email" required>
		</div>

		<div class="form-group">
			<textarea class="form-control" ng-model="message" rows="5" placeholder="Message" required></textarea>
		</div>



		<button type="submit" class="btn btn-rabbit submit">Send Message</button>
	</form>

