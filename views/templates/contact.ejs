<form style="padding-left: 30px; background: rgba(1, 1, 1, 0.2) fixed; padding-top: 10px; " class="form_edit"
      name="cform" action="myapi" method="POST">
    <div class="form-group">
        <input type="text" class="form-control" name="name" placeholder="Name" value="<%if (typeof name != 'undefined') { %><%= name %><% } %>" required>
    </div>

    <div class="form-group">
        <input type="email" class="form-control" name="mail" placeholder="Email" value="<%if (typeof email != 'undefined') { %><%= email %><%}%>" id="mail"
               required>
    </div>

    <div class="form-group">
        <textarea class="form-control" name="message" rows="5" placeholder="Message" required><%if (typeof message != 'undefined') { %><%= message %><% } %></textarea>
    </div>


    <button type="submit" class="btn btn-rabbit submit">Send Message</button>
</form>

