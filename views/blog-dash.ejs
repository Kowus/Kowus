<script>
    $(function () {
        $('.activity-item').each(function () {
            $(this).css('background', 'url(' + $(this).attr('data-background') + ')');
            $(this).css('backgroundSize', 'cover')
            $(this).css('backgroundPosition', 'top')
        })
    })
</script>

</body>

</html>
